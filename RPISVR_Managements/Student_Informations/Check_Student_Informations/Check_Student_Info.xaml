            <RowDefinition x:Name="Text_Header" Height="Auto"/>
            <RowDefinition x:Name="Student_Count_Information" Height="220"/>
            <RowDefinition x:Name="All_Button" Height="Auto"/>
            <RowDefinition x:Name="Information_Show" Height="5*"/>
        </Grid.RowDefinitions>
