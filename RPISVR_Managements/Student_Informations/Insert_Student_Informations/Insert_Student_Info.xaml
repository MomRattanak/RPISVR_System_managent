<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="RPISVR_Managements.Student_Informations.Insert_Student_Informations.Insert_Student_Info"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RPISVR_Managements.Student_Informations.Insert_Student_Informations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding StudentViewModel,Mode=TwoWay}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Text_Header" Height="Auto"/>
            <RowDefinition x:Name="Information_Insert" Height="280"/>
            <RowDefinition x:Name="All_Button" Height="Auto"/>
            <RowDefinition x:Name="Information_Show" Height="5*"/>

        </Grid.RowDefinitions>


        <StackPanel x:Name="P_Header" Grid.Row="0" Margin="5">
            <TextBlock x:Name="P_T_Header" 
                     Text="បញ្ចូលទិន្នន័យសិស្សនិស្សិត" 
                     Style="{StaticResource Font_KH_Title}"/>
        </StackPanel>
        <StackPanel x:Name="P_InsertInfomation" Grid.Row="1" Margin="5" Padding="5" CornerRadius="3" BorderBrush="Aqua" BorderThickness="2">
            <ScrollView x:Name="Scroll_P_Insert" MaxHeight="260" ContentOrientation="Horizontal" HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Visible">
                <StackPanel>
                    <RelativePanel>

                        <TextBox x:Name="Stu_ID" 
                               Header="ID សិស្សនិស្សិត" 
                               Style="{StaticResource Style_KH_TextBox}"
                               Text="{Binding Stu_ID, Mode=TwoWay}"
                               BorderBrush="{Binding StuIDBorderBrush}"
                               IsReadOnly="True"/>

                        <TextBox x:Name="Stu_FirstName_KH" 
                               Header="គោត្តនាម" 
                               PlaceholderText="បញ្ចូល (ត្រកូល)" 
                               RelativePanel.Below="Stu_ID" 
                               Style="{StaticResource Style_KH_TextBox}"
                               Text="{Binding Stu_FirstName_KH, Mode=TwoWay}"
                               BorderBrush="{Binding Stu_FirstName_KH_BorderBrush}"/>
                        
                            

                        <TextBox x:Name="Stu_LastName_KH" 
                               Header="នាម" 
                               PlaceholderText="បញ្ចូល (ឈ្មោះ)" 
                               RelativePanel.Below="Stu_FirstName_KH" 
                               Style="{StaticResource Style_KH_TextBox}"
                                Text="{Binding Stu_LastName_KH, Mode=TwoWay}"
                               BorderBrush="{Binding Stu_LastName_KH_BorderBrush}"/>
                       

                        <TextBox x:Name="Stu_FirstName_EN" 
                                 Text="{Binding Stu_FirstName_EN, Mode=TwoWay}"
                               Header="ត្រកូល (ឡាតាំង)" 
                               PlaceholderText="FIRST_NAME" 
                               RelativePanel.RightOf="Stu_ID"                                   
                               Style="{StaticResource Style_KH_TextBox}"
                               BorderBrush="{Binding Stu_FirstName_EN_BorderBrush}"/>

                        <TextBox x:Name="Stu_LastName_EN" 
                                 Text="{Binding Stu_LastName_EN, Mode=TwoWay}"
                               Header="ឈ្មោះ (ឡាតាំង)" 
                               PlaceholderText="LAST_NAME" 
                               RelativePanel.RightOf="Stu_FirstName_KH" 
                               RelativePanel.Below="Stu_FirstName_EN" 
                               Style="{StaticResource Style_KH_TextBox}"
                               BorderBrush="{Binding Stu_LastName_EN_BorderBrush}"/>

                        <ToggleSwitch x:Name="Stu_Gender"
                                    Header="ភេទ" 
                                    OnContent="ស្រី" 
                                    OffContent="ប្រុស"
                                    RelativePanel.Below="Stu_StateFamily"
                                    RelativePanel.RightOf="Stu_EducationLevels"                                   
                                    Style="{StaticResource Stye_KH_ToggleSwitch}"
                                    Margin="5,5,5,0"
                                    IsOn="{Binding IsMale, Mode=TwoWay}"/>

                        <!--<DatePicker x:Name="Stu_Birthday" 
                                Header="ថ្ងៃខែឆ្នាំកំណើត"   
                                RelativePanel.RightOf="Stu_FirstName_EN" 
                                Style="{StaticResource Stye_KH_Picker}"
                                Margin="5,10,5,0"
                                Date="{Binding Stu_Birthday, Mode=TwoWay}" />-->

                        <StackPanel x:Name="Stu_Birthday" VerticalAlignment="Center" RelativePanel.RightOf="Stu_FirstName_EN" >

                            <RelativePanel>
                                <TextBlock x:Name="Text_BT" Text="ថ្ងៃខែឆ្នាំកំណើត" Style="{StaticResource Style_KH_TextBox}"/>

                                 <!--Day ComboBox--> 
                                <ComboBox x:Name="DayPicker"
                                            RelativePanel.Below="Text_BT"  
                                            Style="{StaticResource Stye_KH_Combobox}"
                                            ItemsSource="{Binding Days}"
                                            SelectedItem="{Binding SelectedDay, Mode=TwoWay}"
                                            Width="100"                      
                                            Margin="5,10,0,0" />

                                 <!--Khmer Month ComboBox--> 
                                <ComboBox x:Name="KhmerMonthPicker"
                                          RelativePanel.RightOf="DayPicker"
                                          RelativePanel.Below="Text_BT" 
                                          Style="{StaticResource Stye_KH_Combobox}"                                        
                                          ItemsSource="{Binding KhmerMonths}"
                                          SelectedItem="{Binding SelectedKhmerMonth, Mode=TwoWay}"
                                          Width="100"
                                          Margin="0,10,0,0" />

                                 <!--Year ComboBox--> 
                                <ComboBox x:Name="YearPicker"
                                          RelativePanel.RightOf="KhmerMonthPicker"
                                          RelativePanel.Below="Text_BT" 
                                          Style="{StaticResource Stye_KH_Combobox}"
                                          ItemsSource="{Binding Years}"
                                          MaxDropDownHeight="500"
                                          SelectedItem="{Binding SelectedYear, Mode=TwoWay}"
                                          Width="100"
                                          Margin="0,10,5,0" />
                            </RelativePanel>
                        </StackPanel>

                        <ToggleSwitch x:Name="Stu_StateFamily"
                                    Header="ស្ថានភាពគ្រួសារ"
                                    OnContent="មានគ្រួសារ"
                                    OffContent="នៅលីវ"          
                                    RelativePanel.Below="Stu_Birthday"
                                    RelativePanel.RightOf="Stu_LastName_EN"
                                    Style="{StaticResource Stye_KH_ToggleSwitch}"
                                    Margin="5,15,5,0"
                                    IsOn="{Binding IsSingle,Mode=TwoWay}"/>

                        <ComboBox x:Name="Stu_EducationLevels"
                                Header="កម្រិតសិក្សា"
                                RelativePanel.Below="Stu_LastName_EN"
                                RelativePanel.RightOf="Stu_LastName_KH"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="5,5,5,0"
                                SelectedItem="{Binding Stu_EducationLevels,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_EducationLevels_BorderBrush}">
                            <x:String>បរិញ្ញាបត្រ</x:String>
                            <x:String>បរិញ្ញាបត្ររង</x:String>
                        </ComboBox>

                        <ComboBox x:Name="Stu_Subject"
                                Header="ជំនាញ"                                 
                                RelativePanel.RightOf="Stu_Birthday"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="5,5,5,5"
                                SelectedItem="{Binding Stu_EducationSubjects,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_EducationSubjects_BorderBrush}">

                            <x:String>វិទ្យាសាស្ត្រកុំព្យូទ័រ</x:String>
                            <x:String>អគ្គិសនី</x:String>
                            <x:String>អេឡិចត្រូនិក</x:String>
                            <x:String>រថយន្ត</x:String>

                        </ComboBox>

                        <ComboBox x:Name="Stu_StudyTime"
                                Header="វេនសិក្សា"
                                RelativePanel.Below="Stu_Subject"
                                RelativePanel.RightOf="Stu_StateFamily"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="150,5,5,0"
                                SelectedItem="{Binding Stu_StudyTimeShift,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_StudyTimeShift_BorderBrush}">
                            <x:String>វេនចន្ទសុក្រ(ព្រឹក)</x:String>
                            <x:String>វេនចន្ទសុក្រ(រសៀល)</x:String>
                            <x:String>វេនសៅរ៍អាទិត្យ</x:String>
                        </ComboBox>

                        <ComboBox x:Name="Stu_TypeStudy"
                                Header="ប្រភេទសិក្សា"
                                RelativePanel.Below="Stu_StudyTime"
                                RelativePanel.RightOf="Stu_Gender"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="150,5,5,0"
                                SelectedItem="{Binding Stu_EducationType,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_TypeStudy_BorderBrush}">
                            <x:String>ថ្នាក់អាហារូបករណ៍</x:String>
                            <x:String>ថ្នាក់បង់ថ្លៃ</x:String>
                            <x:String>វគ្គខ្លី</x:String>
                        </ComboBox>

                        <NumberBox x:Name="Stu_PhoneNumber"
                               Header="លេខទូរស័ព្ទផ្ទាល់ខ្លួន"                                                                
                               RelativePanel.RightOf="Stu_Subject"
                               Style="{StaticResource Stye_KH_NumberBox}"
                               Width="150"
                               Margin="5,5,0,0"
                               Minimum="0"
                               Text="{Binding Stu_PhoneNumber,Mode=TwoWay}"
                               ValidationMode="InvalidInputOverwritten"
                               BorderBrush="{Binding Stu_PhoneNumber_BorderBrush}"/>

                        <NumberBox x:Name="Stu_NationalID"
                                 Header="លេខអត្តសញ្ញាណប័ណ្ណ"
                                 RelativePanel.Below="Stu_PhoneNumber"
                                 RelativePanel.RightOf="Stu_StudyTime"                                      
                                 Style="{StaticResource Stye_KH_NumberBox}"
                                 Margin="5,5,5,0"
                                 Width="150"
                                 Text="{Binding Stu_NationalID,Mode=TwoWay}"
                                 BorderBrush="{Binding Stu_NationalID_BorderBrush}"/>
                        <ComboBox x:Name="Stu_StudyingTime"
                                Header="ឆ្នាំទី"
                                RelativePanel.RightOf="Stu_TypeStudy"
                                RelativePanel.Below="Stu_NationalID"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="5,7,0,0"
                                SelectedItem="{Binding Stu_StudyingTime,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_StudyingTime_BorderBrush}">
                            <x:String>1</x:String>
                            <x:String>2</x:String>
                            <x:String>3</x:String>
                            <x:String>4</x:String>
                            <x:String>4.5</x:String>
                        </ComboBox>
                                

                        <Line X1="10" Y1="10" X2="10" Y2="230" 
                                x:Name="Line_1"
                                Stroke="Aqua" 
                                StrokeThickness="2"
                                RelativePanel.RightOf="Stu_PhoneNumber"
                            Margin="0,0,10,0"/>

                        <TextBlock x:Name="Title_Place"
                                 Text="ទីកន្លែងកំណើត"
                                 Foreground="Aqua"
                                 RelativePanel.RightOf="Line_1"
                                 Style="{StaticResource Font_KH_Body}"
                                 Margin="0,5,0,0"/>

                        <ComboBox x:Name="Stu_Birth_Province"
                               Header="ខេត្ត"
                               RelativePanel.Below="Title_Place"
                               RelativePanel.RightOf="Line_1"
                               Style="{StaticResource Stye_KH_Combobox}"
                               Margin="5"
                               SelectedItem="{Binding Stu_Birth_Province,Mode=TwoWay}"
                               BorderBrush="{Binding Stu_Birth_Province_BorderBrush}">
                            <x:String>ស្វាយរៀង</x:String>
                            <x:String>ភ្នំពេញ</x:String>
                        </ComboBox>

                        <ComboBox x:Name="Stu_Birth_Distric"
                                Header="ស្រុក/ខណ្ឌ"
                                RelativePanel.RightOf="Stu_Birth_Province"
                                RelativePanel.Below="Title_Place"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="5"
                                SelectedItem="{Binding Stu_Birth_Distric,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_Birth_Distric_BorderBrush}">
                            <x:String>ស្វាយទាប</x:String>
                            <x:String>ក្រុងស្វាយរៀង</x:String>
                        </ComboBox>


                        <ComboBox x:Name="Stu_Birth_Commune"
                                Header="ឃុំ/សង្កាត់"
                                RelativePanel.RightOf="Stu_Birth_Distric"
                                RelativePanel.Below="Title_Place"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="5"
                                SelectedItem="{Binding Stu_Birth_Commune,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_Birth_Commune_BorderBrush}">
                            <x:String>រមាំងថ្កោល</x:String>
                            <x:String>សំបួរ</x:String>
                        </ComboBox>

                        <ComboBox x:Name="Stu_Birth_Village"
                                Header="ភូមិ"
                                RelativePanel.RightOf="Stu_Birth_Commune"
                                RelativePanel.Below="Title_Place"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="5"
                                SelectedItem="{Binding Stu_Birth_Village,Mode=TwoWay}"
                                BorderBrush="{Binding  Stu_Birth_Village_BorderBrush}">
                            <x:String>ទន្លៀង</x:String>
                            <x:String>វាលល្ងើត</x:String>
                        </ComboBox>

                        <Line X1="0" Y1="10" X2="660" Y2="10" 
                             x:Name="Line_2"
                             Stroke="Aqua" 
                             StrokeThickness="2"
                             RelativePanel.RightOf="Line_1"
                             RelativePanel.Below="Stu_Birth_Province"
                             Margin="-10,0,0,0"/>

                        <TextBlock x:Name="Title_Place02"
                                 Text="អាស័យដ្ឋានបច្ចុប្បន្ន"
                                 RelativePanel.RightOf="Line_1"
                                 RelativePanel.Below="Line_2"
                                 Foreground="Aqua"
                                 Style="{StaticResource Font_KH_Body}"
                                 Margin="0,5,0,0"/>

                        <ComboBox x:Name="Stu_Live_Pro"
                                Header="ខេត្ត"
                                RelativePanel.Below="Title_Place02"
                                RelativePanel.RightOf="Line_1"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="5"
                                SelectedItem="{Binding Stu_Live_Pro,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_Live_Pro_BorderBrush}">
                            <x:String>ស្វាយរៀង</x:String>
                            <x:String>ភ្នំពេញ</x:String>
                        </ComboBox>

                        <ComboBox x:Name="Stu_Live_Dis"
                                Header="ស្រុក/ខណ្ឌ"
                                RelativePanel.RightOf="Stu_Live_Pro"
                                RelativePanel.Below="Title_Place02"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="5"
                                SelectedItem="{Binding Stu_Live_Dis,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_Live_Dis_BorderBrush}">
                            <x:String>ស្វាយទាប</x:String>
                            <x:String>ក្រុងស្វាយរៀង</x:String>
                        </ComboBox>

                        <ComboBox x:Name="Stu_Live_Comm"
                                Header="ឃុំ/សង្កាត់"
                                RelativePanel.RightOf="Stu_Live_Dis"
                                RelativePanel.Below="Title_Place02"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="5"
                                SelectedItem="{Binding Stu_Live_Comm,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_Live_Comm_BorderBrush}">
                            <x:String>រមាំងថ្កោល</x:String>
                            <x:String>សំបួរ</x:String>
                        </ComboBox>

                        <ComboBox x:Name="Stu_Live_Vill"
                                Header="ភូមិ"
                                RelativePanel.RightOf="Stu_Live_Comm"
                                RelativePanel.Below="Title_Place02"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="5"
                                SelectedItem="{Binding Stu_Live_Vill,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_Live_Vill_BorderBrush}">
                            <x:String>ទន្លៀង</x:String>
                            <x:String>វាលល្ងើត</x:String>
                        </ComboBox>

                        <Line X1="0" Y1="10" X2="0" Y2="230" 
                            x:Name="Line_3"
                            Stroke="Aqua" 
                            StrokeThickness="2"
                            RelativePanel.RightOf="Line_2"
                            Margin="0,0,5,0"/>

                        <AutoSuggestBox x:Name="Stu_Jobs"
                                      Header="មុខរបររបស់សិស្ស/និស្សិត"
                                      RelativePanel.RightOf="Line_3"                                        
                                      Style="{StaticResource Stye_KH_AutoSuggestBox}"
                                      Margin="5"
                                      Text="{Binding Stu_Jobs,Mode=TwoWay}">
                        </AutoSuggestBox>

                        <AutoSuggestBox x:Name="Stu_School"
                                      Header="មកពីសាលា/វិទ្យាល័យ"
                                      RelativePanel.RightOf="Stu_Jobs"                                      
                                      Style="{StaticResource Stye_KH_AutoSuggestBox}" 
                                      Margin="5"
                                      Text="{Binding Stu_School,Mode=TwoWay}"/>
                        <ComboBox x:Name="Stu_StudyYear"
                                Header="ឆ្នាំសិក្សា"
                                RelativePanel.RightOf="Stu_School"
                                Style="{StaticResource Stye_KH_Combobox}"
                                Margin="5"
                                SelectedItem="{Binding Stu_StudyYear,Mode=TwoWay}"
                                BorderBrush="{Binding Stu_StudyYear_BorderBrush}">
                               
                            <x:String>2021-2022</x:String>
                            <x:String>2022-2023</x:String>
                            <x:String>2023-2024</x:String>
                            <x:String>2024-2025</x:String>
                            <x:String>2025-2026</x:String>
                            <x:String>2026-2027</x:String>
                        </ComboBox>
                        <ComboBox x:Name="Stu_Semester"
                                  Header="ឆមាស"
                                  RelativePanel.RightOf="Stu_StudyYear"
                                  Style="{StaticResource Stye_KH_Combobox}"
                                  Margin="5"
                                  SelectedItem="{Binding Stu_Semester,Mode=TwoWay}"
                                  BorderBrush="{Binding Stu_Semester_BorderBrush}">
                            <x:String>1</x:String>
                            <x:String>2</x:String>
                        </ComboBox>

                        <TextBox x:Name="Stu_Mother_Name"
                               Header="ឈ្មោះម្ដាយ"
                               RelativePanel.Below="Stu_Jobs"
                               RelativePanel.RightOf="Line_3"
                               Style="{StaticResource Style_KH_TextBox}"
                               Margin="5"
                               Text="{Binding Stu_Mother_Name,Mode=TwoWay}"/>

                        <NumberBox x:Name="Stu_Mother_Phone"
                                 Header="លេខទូរស័ព្ទម្ដាយ"
                                 RelativePanel.RightOf="Stu_Mother_Name"
                                 RelativePanel.Below="Stu_School"
                                 Style="{StaticResource Stye_KH_NumberBox}"
                                 Margin="5"
                                 Text="{Binding Stu_Mother_Phone,Mode=TwoWay}"/>

                        <AutoSuggestBox x:Name="Stu_Mother_Job"
                                      Header="មុខរបរម្ដាយ"
                                      RelativePanel.RightOf="Stu_Mother_Phone"
                                      RelativePanel.Below="Stu_StudyYear"
                                      Style="{StaticResource Stye_KH_AutoSuggestBox}"
                                      Margin="5"
                                      Text="{Binding Stu_Mother_Job,Mode=TwoWay}"/>

                        <TextBox x:Name="Stu_Father_Name"
                               Header="ឪពុកឈ្មោះ"
                               RelativePanel.Below="Stu_Mother_Name"
                               RelativePanel.RightOf="Line_3"
                               Style="{StaticResource Style_KH_TextBox}"
                               Margin="5"
                               Text="{Binding Stu_Father_Name,Mode=TwoWay}"/>

                        <NumberBox x:Name="Stu_Father_Phone"
                                 Header="លេខទូរស័ព្ទឪពុក"
                                 RelativePanel.RightOf="Stu_Father_Name"
                                 RelativePanel.Below="Stu_Mother_Phone"
                                 Style="{StaticResource Stye_KH_NumberBox}"
                                 Margin="5"
                                 Text="{Binding Stu_Father_Phone,Mode=TwoWay}"/>

                        <AutoSuggestBox x:Name="Stu_Father_Job"
                                      Header="មុខរបរឪពុក"
                                      RelativePanel.RightOf="Stu_Father_Phone"
                                      RelativePanel.Below="Stu_Mother_Job"
                                      Style="{StaticResource Stye_KH_AutoSuggestBox}"
                                      Margin="5"
                                      Text="{Binding Stu_Father_Job,Mode=TwoWay}"/>
                        <Line X1="0" Y1="10" X2="0" Y2="230" 
                            x:Name="Line_5"
                            Stroke="Aqua" 
                            StrokeThickness="2"
                            RelativePanel.RightOf="Stu_Semester"
                            Margin="5,5,5,0"/>
                        <Button x:Name="Stu_ChooseImage"                                     
                                    Style="{StaticResource Stye_KH_Button}"
                                    RelativePanel.RightOf="Line_5"
                                    Margin="5"
                                    Width="200"
                                    Click="btn_chooseimage_stu"
                                    IsEnabled="{Binding IsOn,ElementName=Stu_Image_YesNo}">
                            <Button.Resources>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#605EFF" />
                            </Button.Resources>
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icon/icons8-test-account-48.png" Width="28" Height="28" />
                                    <TextBlock Text="ជ្រើសរូបថតសិស្សនិស្សិត" Margin="6,4,0,0"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <ToggleSwitch x:Name="Stu_Image_YesNo"
                                    OffContent="គ្មានរូបថត"
                                    OnContent="មានរូបថត"
                                    Header="រូបថតសិស្សនិស្សិត"
                                    Style="{StaticResource Stye_KH_ToggleSwitch}"
                                    RelativePanel.RightOf="Line_5"
                                    RelativePanel.Below="Stu_ChooseImage"
                                    Margin="10,0,0,0"
                                    IsOn="{Binding IsStuImage_Yes,Mode=TwoWay}"/>
                        <Image x:Name="Stu_ShowImage"
                             Width="100"
                             Height="130"
                             Source="{Binding Stu_Image_Source,Mode=TwoWay}"
                             RelativePanel.RightOf="Line_5"
                             RelativePanel.Below="Stu_Image_YesNo" 
                             />
                        <NumberBox x:Name="Stu_Image_Total_Big"
                                 Header="ចំនួនរូបថតធំ"
                                 Value="0"
                                 IsEnabled="{Binding IsOn,ElementName=Stu_Image_YesNo}"
                                 Text="{Binding Stu_Image_Total_Big,Mode=TwoWay}"
                                 Style="{StaticResource Stye_KH_NumberBox}"
                                 RelativePanel.RightOf="Stu_ShowImage"
                                 RelativePanel.Below="Stu_Image_YesNo"
                                 Width="75"
                                 Margin="5,0,0,0"
                                 BorderBrush="{Binding Stu_Image_Total_Big_BorderBrush}"/>
                        <NumberBox x:Name="Stu_Image_TotalSmall"
