                <Button x:Name="btn_preview_card"  Command="{Binding ShowStudentCardsCommand}"  Width="120" Margin="10,0,0,0" >
                    <Button.Content>
                        <StackPanel>
                            <TextBlock Text="បង្ហាញកាត"
                                   Style="{StaticResource Font_KH_Body}"
                                   ToolTipService.ToolTip="សម្រាប់បង្ហាញកាតសិស្សនិស្សិត"/>
